<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ImageProcessor.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="ImageProcessor.UI.Views.SettingsView"
        x:DataType="vm:SettingsViewModel"
        Title="Settings"
        Width="600" MinHeight="450"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner">

  <DockPanel Margin="15">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,15,0,0">
      <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
      <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"/>
    </StackPanel>

    <StackPanel Spacing="10">
      <TextBlock Text="Real-ESRGAN Command Line Arguments" FontWeight="Bold"/>
      <TextBlock TextWrapping="Wrap">
        Use placeholders for dynamic values:
        <LineBreak/>
        - {inputFile}: Path to the input image.
        <LineBreak/>
        - {outputFile}: Path to the output image.
        <LineBreak/>
        - {modelName}: The selected AI model name.
        <LineBreak/>
        - {scale}: The upscale factor (e.g., 4).
        <LineBreak/>
        - {modelsPath}: The path to the models directory.
      </TextBlock>
      <TextBox Text="{Binding RealEsrganArguments, Mode=TwoWay}" AcceptsReturn="True" Height="150" TextWrapping="Wrap"/>
      
      <TextBlock Text="Resulting command preview:" Margin="0,10,0,0" FontWeight="Bold"/>
      <Border Padding="10" CornerRadius="5" Background="{DynamicResource SystemControlBackgroundListLowBrush}" BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}">
        <TextBlock Text="{Binding CommandPreview}" TextWrapping="Wrap" FontFamily="monospace"/>
      </Border>
    </StackPanel>
  </DockPanel>
</Window>
